<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>แก้ไขข่าว | โรงพยาบาลเถิน</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
   <header class="bg-white border-bottom py-3 sticky-top">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                 <a href="/" class="brand-logo">
                    <img src="/favicon.ico" alt="Hospital Logo" style="width: 32px; height: 32px;">
                    <span class="brand-text">ประชาสัมพันธ์โรงพยาบาลเถิน</span>
                </a>
            </div>
            
            <div class="header-actions d-flex gap-2">
                <a href="/" class="btn btn-outline-secondary btn-sm d-flex align-items-center gap-2 rounded-pill">
                    <i class="bi bi-house-door-fill"></i> หน้าแรก
                </a>
                <a href="/admin/upload" class="btn btn-primary btn-sm d-flex align-items-center gap-2 rounded-pill shadow-sm">
                    <i class="bi bi-plus-lg"></i> ลงข่าวใหม่
                </a>
                <a href="/admin/logout" class="btn btn-danger btn-sm d-flex align-items-center gap-2 rounded-pill">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </header>
    
    <main class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="fw-bold text-dark mb-4">แก้ไขข่าวสาร (ID: <%= news.id %>)</h2>

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-4">
                        <form action="/admin/update/<%= news.id %>" method="POST" enctype="multipart/form-data">
                            
                            <input type="hidden" name="start_date" id="real_start_date" value="<%= news.start_date_local.replace('T', ' ') %>">
                            <input type="hidden" name="end_date" id="real_end_date" value="<%= news.end_date_local.replace('T', ' ') %>">

                            <div class="row g-3">
                                <div class="col-md-8">
                                    <label class="form-label fw-bold">หัวข้อข่าวสาร</label>
                                    <input type="text" name="title" class="form-control" value="<%= news.title %>" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-bold">หมวดหมู่</label>
                                    <select name="category" class="form-select" required>
    <% 
        const cats = ['ข่าวสารประชาสัมพันธ์', 'ประชุมอบรม / สัมมนา', 'ประกาศรับสมัครงาน', 'ข่าวสารความรู้'];
        cats.forEach(cat => { 
    %>
        <option value="<%= cat %>" <%= news.category === cat ? 'selected' : '' %>><%= cat %></option>
    <% }); %>
</select>
                                </div>

                                <div class="col-12"><hr class="text-muted opacity-25"></div>

                                <div class="col-12">
                                    <label class="form-label fw-bold">ไฟล์แนบปัจจุบัน</label>
                                    <div class="bg-light p-3 rounded border">
                                        <% if (files.length > 0) { %>
                                            <div class="d-flex flex-column gap-2">
                                                <% files.forEach(file => { %>
                                                    <div class="form-check d-flex align-items-center">
                                                        <input class="form-check-input me-2" type="checkbox" name="files_to_delete" value="<%= file.id %>" id="file_<%= file.id %>">
                                                        <label class="form-check-label d-flex align-items-center w-100" for="file_<%= file.id %>">
                                                            <% if (file.file_type === 'image') { %>
                                                                <i class="bi bi-image text-success me-2"></i>
                                                            <% } else { %>
                                                                <i class="bi bi-file-pdf text-danger me-2"></i>
                                                            <% } %>
                                                            <span class="text-truncate me-auto"><%= file.original_name %></span>
                                                            <a href="/<%= file.file_path %>" target="_blank" class="btn btn-sm btn-link text-decoration-none ms-2">ดูไฟล์</a>
                                                            <span class="badge bg-danger ms-2">ติ๊กเพื่อลบ</span>
                                                        </label>
                                                    </div>
                                                <% }); %>
                                            </div>
                                        <% } else { %>
                                            <p class="text-muted small mb-0">ไม่มีไฟล์แนบ</p>
                                        <% } %>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold text-success">เพิ่มรูปภาพใหม่</label>
                                    <input type="file" name="images" class="form-control" multiple accept="image/*">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold text-danger">เพิ่มไฟล์ PDF ใหม่</label>
                                    <input type="file" name="pdf_file" class="form-control" accept="application/pdf">
                                </div>

                                <div class="col-12"><hr class="text-muted opacity-25"></div>

                                <div class="col-12">
                                    <label class="form-label fw-bold">Link YouTube</label>
                                    <input type="text" name="youtube_link" class="form-control" value="<%= news.youtube_link || '' %>">
                                </div>

                                <div class="col-12">
                                    <div class="bg-light p-3 rounded-3 border">
                                        <h6 class="fw-bold mb-3 text-secondary"><i class="bi bi-clock"></i> แก้ไขช่วงเวลาแสดงผล</h6>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label class="form-label small text-muted">เริ่มแสดง</label>
                                                <input type="text" id="ui_start_date" class="form-control datetime-picker" 
                                                       value="<%= news.start_date_local.replace('T', ' ') %>" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label small text-muted">สิ้นสุด</label>
                                                <input type="text" id="ui_end_date" class="form-control datetime-picker" 
                                                       value="<%= news.end_date_local.replace('T', ' ') %>" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 mt-4 d-flex gap-2">
                                    <button type="submit" class="btn btn-primary flex-grow-1 py-2 rounded-pill fw-bold shadow-sm">
                                        <i class="bi bi-save me-2"></i> บันทึกการแก้ไข
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        const config = {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            minuteIncrement: 1,
            onChange: function(selectedDates, dateStr, instance) {
                if (instance.input.id === 'ui_start_date') {
                    document.getElementById('real_start_date').value = dateStr;
                } else if (instance.input.id === 'ui_end_date') {
                    document.getElementById('real_end_date').value = dateStr;
                }
            }
        };

        flatpickr("#ui_start_date", config);
        flatpickr("#ui_end_date", config);
    </script>
</body>
</html>